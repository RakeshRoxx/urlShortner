<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

</head>

<body>
    <div class="container">
        <h1>URL Shrinker</h1>
        <form action="/shortUrls" method="POST" class="my-4 form-inline">
            <!-- <label for="fullUrl" class="sr-only">Url</label> -->
            <input required type="url" class="form-control mr-2" placeholder="Url" name="fullUrl" id="fullUrl">
            <button class="btn btn-success" type="submit">Shrink</button>
        </form>
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <td>Full Url</td>
                    <td>Short Url</td>
                    <td>Clicks</td>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrls => { %>
                <tr>
                    <td><a href="<%= shortUrls.full %> "><%= shortUrls.full %></a></td>
                    <td><a href="<%= shortUrls.short %> "><%= shortUrls.short %></a></td>
                    <td><%= shortUrls.clicks %> </td>
                </tr>
                <% }) %>
            </tbody>
        </table>

    </div>
</body>

</html>